@model IEnumerable<ProjetoFinal.Usuario>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/pesquisa.css" asp-append-version="true" />
<h1>Usuário</h1>

<p>
    <h4><a asp-action="Create">Criar Usuário</a></h4>
</p>
<form asp-controller="Usuarios" asp-action="Index" method="get">
    <p>
        <input type="text" name="id" placeholder="Pesquisar Usuário" />
        <input type="text" name="search" placeholder="Nome ou Login" />
        <input type="submit" value="Filtro" class="filtro"/>
    </p>

</form>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserLogin)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserLogin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Editar Usuário</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Exibir Usuário</a> | 
                <a asp-action="Delete" asp-route-id="@item.UserId">Deletar Usuário</a>
            </td>
        </tr>
}
    </tbody>
</table>
