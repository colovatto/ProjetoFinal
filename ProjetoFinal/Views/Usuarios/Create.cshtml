@model ProjetoFinal.Usuario


@{
    ViewData["Title"] = "Criar Usuário";
}

<h1>Criar Usuário</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserNome" class="control-label"></label>
                <input asp-for="UserNome" class="form-control" placeholder="Nome"/>
                <span asp-validation-for="UserNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLogin" class="control-label"></label>
                <input asp-for="UserLogin" class="form-control" placeholder="Login"/>
                <span asp-validation-for="UserLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserSenha" class="control-label"></label>
                <input type="password" asp-for="UserSenha" class="form-control" placeholder="Senha"/>
                <span asp-validation-for="UserSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Criar Usuário" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
