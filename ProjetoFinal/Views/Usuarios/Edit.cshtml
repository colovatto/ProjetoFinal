@model ProjetoFinal.Usuario

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-center"><b>Editar Usuário</b></h1>

<h4>@Html.DisplayFor(model => model.UserNome)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
              
                <input type="hidden" asp-for="UserNome" class="form-control" />
                <span asp-validation-for="UserNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="UserLogin" class="form-control" />
                <span asp-validation-for="UserLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserSenha" class="control-label"></label>
                <input type="password" asp-for="UserSenha" class="form-control" />
                <span asp-validation-for="UserSenha" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-outline-primary">Voltar para Usuários</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
