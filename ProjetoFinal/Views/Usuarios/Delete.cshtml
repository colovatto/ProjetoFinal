@model ProjetoFinal.Usuario


@{
    ViewData["Title"] = "Deletar";
}

<h1 class="text-center"><b>Deletar</b></h1>

<h3>Você tem certeza que deseja apagar este usuário?</h3>
<div>
    <h4>ID @Html.DisplayFor(model => model.UserId)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserLogin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserLogin)
        </dd>
       
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-primary">Voltar para Usuários</a>
    </form>
</div>
