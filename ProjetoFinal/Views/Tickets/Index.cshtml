@model IEnumerable<ProjetoFinal.Ticket>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/pesquisa.css" asp-append-version="true" />

<h1>Tickets</h1>

<p>
    <h4><a asp-action="Create">Novo Ticket</a></h4>
</p>

<form asp-controller="Tickets" asp-action="Index" method="get">
    <p>
        
        <input type="text" name="id" placeholder="Pesquisar INC"/>
        <input type="text" name="search" placeholder="Nome ou Descrição"/>
        <input type="submit" value="Pesquisar" class="filtro"/>
        
    </p>

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketEmail)
            </th>      
            <th>
                @Html.DisplayNameFor(model => model.TicketCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketDescricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            var conc = "INC00" + item.TicketId;
            <tr>
            <td>
                @Html.DisplayFor(modelItem => conc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketEmail)
            </td>         
            <td>
                @Html.DisplayFor(modelItem => item.TicketCategoria)
            </td>
            <td>                
                @Html.DisplayFor(modelItem => item.TicketDescricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TicketId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TicketId">Exibir</a> |
                <a asp-action="Delete" asp-route-id="@item.TicketId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
